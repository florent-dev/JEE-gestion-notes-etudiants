<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Gestion des étudiants</display-name>

    <!-- Titre de l'application -->
    <context-param>
        <param-name>title</param-name>
        <param-value>Gestion des étudiants</param-value>
    </context-param>

    <!-- URLs communes aux vues -->
    <context-param>
        <param-name>entetedepage</param-name>
        <param-value>/WEB-INF/JSP/commun/entetedepage.jsp</param-value>
    </context-param>
    <context-param>
        <param-name>pieddepage</param-name>
        <param-value>/WEB-INF/JSP/commun/pieddepage.jsp</param-value>
    </context-param>

    <!--========= Pages =========== -->
    <!-- Servlet controleur -->
    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>classes.controller.Controller</servlet-class>
        <init-param>
            <param-name>index</param-name>
            <param-value>/WEB-INF/JSP/index.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>details</param-name>
            <param-value>/WEB-INF/JSP/details.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>groupe</param-name>
            <param-value>/WEB-INF/JSP/groupe.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>etudiants</param-name>
            <param-value>/WEB-INF/JSP/etudiants.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>modules</param-name>
            <param-value>/WEB-INF/JSP/modules.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>404</param-name>
            <param-value>/WEB-INF/JSP/404.jsp</param-value>
        </init-param>
    </servlet>

    <!-- Mapping URL/Servlet -->
    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/do/*</url-pattern>
    </servlet-mapping>

    <!--  fichiers d'accueil -->
    <welcome-file-list>
        <welcome-file>do</welcome-file>
    </welcome-file-list>

</web-app>